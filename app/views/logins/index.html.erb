<div class="outlined-content login-box">
  <h2>Sign in to access the SalesForce Widget Store Listing</h2> 
  <div class="field-row">
    <div class="field-label"><label for="">Login:</label></div>
    <div class="field-value">&nbsp;<%= text_field_tag 'login', 'business@apple.com' %></div>
  </div>

  <div class="field-row">
    <div class="field-label"><label for="">Password:</label></div>
    <div class="field-value">&nbsp;<%= password_field_tag 'password', '' %></div>
  </div>

  <div class="centered submit-box">
    <%= submit_tag "Sign In", :onclick => "document.location='/stores'" %>
  </div>
</div>